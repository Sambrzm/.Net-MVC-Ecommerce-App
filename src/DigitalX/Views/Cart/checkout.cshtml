
@{
    ViewBag.Title = "checkout";
}

<h2>Please Select an Address for Delivery</h2>

<select name="listbox" id="listbox">
    @foreach (var item in ViewBag.addressList)
    {

        <option value="@item.Street">
            @item.Suburb
            @item.City
            @item.PostalCode
            @item.Country
        </option>
    }
</select>

@Html.ActionLink("New Address", "CreateAddress", "Cart")
@Html.ActionLink("Next", "invoice", "Cart")

